{
  "expo": {
    "name": "Activity Listing Platform",
    "slug": "activity-listing-platform",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.activityplatform.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.activityplatform.app"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "scheme": "activity-platform",
    "plugins": [
      "expo-router"
    ]
  }
}

